{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "noEmit": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
